@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-link text-light px-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    <a class="btn btn-light mx-2" asp-area="Identity" asp-page="/MyOrders">My Orders</a>
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
        <button class="btn btn-primary shadow" type="submit" style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);">Logout</button>
    </form>
}
else
{
    <a class="btn btn-primary shadow" role="button" asp-area="Identity" asp-page="/Account/Login" style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);">Login</a>
}

