@page
@model MTM_Holidays.Pages.Pictures.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Picture[0].URL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture[0].Holiday)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Picture) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Holiday.Region)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PictureID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PictureID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PictureID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
