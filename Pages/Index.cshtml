@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<header class="pt-5">
    <div class="container pt-4 pt-xl-5">
        <div class="row pt-5">
            <div class="col-md-8 text-center text-md-start mx-auto" style="color: var(--bs-white);">
                <div class="text-center">
                    <h1 class="display-4 fw-bold"><span style="background-color: rgb(2, 62, 115);">&nbsp;MTM&nbsp;</span></h1>
                    <h3 class="fw-bold text-dark">Holidays&nbsp;<span style="text-decoration: underline; text-decoration-color: #F27052;">sorted</span>.</h3>
                    <p class="fs-5 text-muted mt-5">Search our extensive offer for your next beach holidays.</p>
                    <form asp-page="/Holiday" class="d-flex justify-content-center flex-wrap" method="get">
                        <div class="shadow-lg mb-3"><input class="form-control" type="text" name="searchString" placeholder="Your next holiday..."></div>
                        <div class="shadow-lg mb-3"><button class="btn btn-primary" type="submit" style="background: rgb(2,62,115);">Search</button></div>
                        <div class="col-12 col-lg-10 d-inline-block float-end mx-auto">
                            <div class="text-center position-relative"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>


<br /><br />

<div id="demo" class="carousel slide" data-bs-ride="carousel" style="position:relative;">

 
    <div class="carousel-indicators" style="position:relative;">
        <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="3"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="4"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="5"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="6"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="7"></button>
    </div>

 
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/assets/img/beach.jpg" alt="photo1" class="d-block" style="margin: auto; width: 800px; height: 500px;">
        </div>
        <div class="carousel-item">
            <img src="~/assets/img/chill.jpg" alt="photo2" class="d-block" style="margin: auto; width: 800px; height: 500px; ">
        </div>
        <div class="carousel-item">
            <img src="~/assets/img/resort.jpg" alt="photo3" class="d-block" style="margin: auto; width: 800px; height: 500px;">
        </div>
        <div class="carousel-item">
            <img src="~/assets/img/bluewater.jpg" alt="photo4" class="d-block" style="margin: auto; width: 800px; height: 500px;">
        </div>
        <div class="carousel-item">
            <img src="~/assets/img/people.jpg" alt="photo5" class="d-block" style="margin: auto; width: 800px; height: 500px;">
        </div>
        <div class="carousel-item">
            <img src="~/assets/img/family.jpg" alt="photo6" class="d-block" style="margin: auto; width: 800px; height: 500px;">
        </div>
        <div class="carousel-item">
            <img src="~/assets/img/activity.jpg" alt="photo7" class="d-block" style="margin: auto; width: 800px; height: 500px;">
        </div>
    </div>

  
    <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev" style="left:15%;">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next" style="right:15%;">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

    
    <br /><br />
    


    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Start Your Journey 👋 </h1>
            <p class="lead text-muted">The most searched destinations this month ⬇️ </p>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                @foreach (var holiday in Model.Holidays)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img src="@Url.Content(holiday.Pictures[0].URL)" class="card-img-top" style="width:345px; height:240px; position:relative;">
                            <div class="card-body">
                                <h4 class="card-text">@holiday.Title</h4>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="button" asp-route-id="@holiday.ID" asp-page="/Details" class="btn btn-sm btn-outline-secondary">View details</a>
                                        <a type="button" asp-route-id="@holiday.ID" asp-page="/Order" class="btn btn-sm btn-outline-secondary">Book a holiday</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
<div class="button" style="right:150px;position:absolute;">
<p>
        <a href="/Holidays" class="btn btn-primary my-4" style="left:100px;right:100px; background-color: rgb(2, 62, 115)">All holiday offers</a>
    </p>
</div>
<br /><br />

