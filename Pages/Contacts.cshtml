@page
@model MTM_Holidays.Pages.ContactsModel
@{
    ViewData["Title"] = "Contacts";
}
<section class="py-5 my-5">
    <div class="container py-5">
        <div class="row mb-2">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <h2 class="display-6 fw-bold mb-5"><span class="pb-3" style="text-decoration: underline; text-decoration-color: #F27052;">Contact with Us.<br></span></h2>
                <p class="text-muted mb-5"> Our assistant will answer you as soon as possible.</p>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-8 mx-auto">
                <div class="container">
                  
                   
                    <div class="row">
                        <div class="col-lg-9 mx-auto">
                            <form id="contactForm" name="sentMessage">
                                <div class="control-group">
                                    <div class="mb-0 form-floating controls pb-2"><input id="name" class="form-control" type="text" required placeholder="Name" /><label class="form-label">Name</label><small class="form-text text-danger help-block"></small></div>
                                </div>
                                <div class="control-group">
                                    <div class="mb-0 form-floating controls pb-2"><input id="email" class="form-control" type="email" required placeholder="Email Address" /><label class="form-label">Email Address</label><small class="form-text text-danger help-block"></small></div>
                                </div>
                                <div class="control-group">
                                    <div class="mb-0 form-floating controls pb-2"><input id="phone" class="form-control" type="tel" required placeholder="Phone Number" /><label class="form-label">Phone Number</label><small class="form-text text-danger help-block"></small></div>
                                </div>
                                <div class="control-group">
                                    <div class="mb-5 form-floating controls pb-2"><textarea id="message" class="form-control" required placeholder="Message" style="height: 150px;"></textarea><label class="form-label">Message</label><small class="form-text text-danger help-block"></small></div>
                                </div>
                                <div id="success"></div>
                                <div class="d-flex justify-content-end w-100"><button id="sendMessageButton" class=" d-flex flex-row-reverse justify-content-center btn btn-primary w-25 " type="submit" style="background-color:#023E73;">Send</button></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
