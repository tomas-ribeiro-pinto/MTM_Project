@page
@model MTM_Holidays.Pages.Orders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.ID" />
            <div class="form-group">
                <label asp-for="Order.OrderDate" class="control-label"></label>
                <input asp-for="Order.OrderDate" class="form-control" />
                <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.CustomerID" class="control-label"></label>
                <select asp-for="Order.CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
                <span asp-validation-for="Order.CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.CardPaymentID" class="control-label"></label>
                <select asp-for="Order.CardPaymentID" class="form-control" asp-items="ViewBag.CardPaymentID"></select>
                <span asp-validation-for="Order.CardPaymentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.DiscountCodeID" class="control-label"></label>
                <select asp-for="Order.DiscountCodeID" class="form-control" asp-items="ViewBag.DiscountCodeID"></select>
                <span asp-validation-for="Order.DiscountCodeID" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Order.IsPaid" /> @Html.DisplayNameFor(model => model.Order.IsPaid)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
